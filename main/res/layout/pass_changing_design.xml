<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/BackgroundColor"
    tools:context=".UserSignUpLogin.Activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifreni değiştir"
            android:textColor="@color/MainTextColor"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_marginStart="40dp"
            android:id="@+id/ChangePassHeaderText"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Hesabını başarılı bir şekilde doğruladın.Şimdi kendine yeni bir şifre seçebilirsin."
            android:textColor="@color/HintTextColor"
            android:textSize="9sp"
            android:layout_marginStart="40dp"
            android:id="@+id/ChangePassDescriptionText"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            android:hint="Yeni şifre"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/HintTextColor"
                android:inputType="textPassword"
                android:id="@+id/NewPasswordEdittext"
                android:drawableStart="@drawable/baseline_lock_24"
                android:textColor="@color/MainTextColor"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:maxLength="50"
                android:textSize="12sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            android:hint="Yeni şifre Tekrar"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/HintTextColor"
                android:inputType="textPassword"
                android:id="@+id/NewPasswordAgainEdittext"
                android:drawableStart="@drawable/baseline_lock_24"
                android:textColor="@color/MainTextColor"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:maxLength="50"
                android:textSize="12sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="237dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            app:cornerRadius="30dp"
            android:text="DEĞİŞTİR"
            android:textSize="10sp"
            android:textColor="@color/BackgroundColor"
            android:backgroundTint="@color/ButtonColor"
            android:id="@+id/ChangePassButton"/>


    </LinearLayout>

</LinearLayout>