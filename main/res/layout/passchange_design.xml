<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_color"
    tools:context=".passchangeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Şifreni değiştir"
            android:id="@+id/passchangeHeader"
            android:textSize="41sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>

        <EditText
            android:layout_width="313dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/oldPassword"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="8dp"
            android:hint="Eski şifre"
            android:textSize="16sp"
            android:padding="13dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="50dp"/>

        <EditText
            android:layout_width="313dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/newPassword"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="8dp"
            android:hint="Yeni şifre"
            android:textSize="16sp"
            android:padding="13dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="313dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/newpasswordAgain"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="8dp"
            android:hint="Yeni şifre tekrar"
            android:textSize="16sp"
            android:padding="13dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="209dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/changepassButton"
            android:textAllCaps="false"
            android:text="Değiştir"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/button_color"
            app:cornerRadius="20dp"/>


    </LinearLayout>

</LinearLayout>