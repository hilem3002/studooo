<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_color"
    tools:context=".verifyepostaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doğrulama"
            android:id="@+id/verifyHeader"
            android:textSize="41sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>

        <TextView
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Hesabına kayıtlı olan e-posta adresine bir kod göndereceğiz"
            android:id="@+id/verifyepostaText"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color"/>

        <EditText
            android:layout_width="313dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/verifyepostaUsername"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="8dp"
            android:hint="Kullanıcı adı veya e-posta"
            android:textSize="16sp"
            android:padding="13dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="209dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/sendcodetouserButton"
            android:textAllCaps="false"
            android:text="Gönder"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/button_color"
            app:cornerRadius="20dp"/>


    </LinearLayout>

</LinearLayout>