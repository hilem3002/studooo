<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/BackgroundColor"
    tools:context=".UserSignUpLogin.Activities.loginActivities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/LoginHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="Giriş yap"
            android:textColor="@color/MainTextColor"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lütfen aşağıya bilgilerini gir"
            android:textColor="@color/HintTextColor"
            android:textSize="9sp"
            android:layout_marginStart="40dp"
            android:id="@+id/LoginDescriptionText"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            android:hint="Kullanıcı adı ya da e-posta">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/HintTextColor"
                android:inputType="text"
                android:id="@+id/usernameEpostaEdittext"
                android:drawableStart="@drawable/baseline_person_24"
                android:textColor="@color/MainTextColor"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:maxLength="50"
                android:textSize="12sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            android:hint="Şifre"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/HintTextColor"
                android:inputType="textPassword"
                android:id="@+id/passwordLoginEdittex"
                android:drawableStart="@drawable/baseline_lock_24"
                android:textColor="@color/MainTextColor"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:maxLength="50"
                android:textSize="12sp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:layout_width="237dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            app:cornerRadius="30dp"
            android:text="GİRİŞ YAP"
            android:textSize="10sp"
            android:textColor="@color/BackgroundColor"
            android:backgroundTint="@color/ButtonColor"
            android:id="@+id/LoginButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifreni mi unuttun?"
            android:clickable="true"
            android:textColor="@color/ButtonColor"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/forgotPasswordText"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/ButtonColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesabın yok mu?"
            android:textColor="@color/HintTextColor"
            android:textSize="12sp"
            android:layout_marginStart="60dp"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="237dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:cornerRadius="30dp"
            android:text="KAYIT OL"
            android:textSize="10sp"
            android:textColor="@color/ButtonColor"
            android:backgroundTint="@color/BackgroundColor"
            android:id="@+id/SignUpConnectButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/ButtonColor"/>


    </LinearLayout>

</LinearLayout>